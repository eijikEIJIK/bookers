<main>
<h1 class="title">Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <span class="update-btn"><%= f.submit 'Update Book' %></span>

<% end %>
<div class="btn-field">
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
</main>